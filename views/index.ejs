<!DOCTYPE html>
<html>
<head>
	<title>Todo list</title>
	<script src="https://code.jquery.com/jquery-3.5.1.min.js" integrity="sha256-9/aliU8dGd2tb6OSsuzixeV4y/faTqgFtohetphbbj0=" crossorigin="anonymous"></script>
	<script src="https://kit.fontawesome.com/f2e268557a.js" crossorigin="anonymous"></script>
	<link href="https://fonts.googleapis.com/css2?family=Roboto:wght@400;500;700&display=swap" rel="stylesheet">
	<link rel="stylesheet" type="text/css" href="/stylesheets/app.css">
	
</head>
<body>
	<div id="container">
		<h1>To-Do List <i class="fas fa-plus"></i></h1>
		<form action="/todos" method="POST">
		<input type="text" name="todo[data]" placeholder="Add New To-Do" maxlength="30">
		</form>
<ul>
	<% todos.forEach(function(todo){ %>
	<li>
		<span>
			<form id="delete" action="/todos/<%= todo._id %>?_method=DELETE" method=POST>
				<button><i class="fas fa-trash-alt"></i></button>
			</form>
		</span>
		<%=todo.data%>
		<span id="edit"><a href="todos/<%= todo._id%>/edit"><i class="far fa-edit"></i></a></span>
	</li>
	<%})%>
</ul>
		
	</div>
	
		
		<script type="text/javascript" src="/scripts/app.js" ></script>
</body>
</html>